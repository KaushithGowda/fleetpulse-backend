generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String

  companies Company[]
  drivers   Driver[]
}

model Company {
  id                   String   @id @default(uuid())
  userId               String
  user                 User     @relation(fields: [userId], references: [id])

  companyName          String
  establishedOn        DateTime
  registrationNumber   String
  website              String?
  address1             String
  address2             String?
  city                 String
  state                String
  zipCode              String
  primaryFirstName     String
  primaryLastName      String
  primaryEmail         String
  primaryMobile        String

  createdAt            DateTime @default(now())
}

model Driver {
  id                 String   @id @default(uuid())
  userId             String
  user               User     @relation(fields: [userId], references: [id])

  firstName          String
  lastName           String
  email              String
  mobile             String
  dateOfBirth        DateTime
  licenseNumber      String
  licenseStartDate   DateTime
  address1           String?
  address2           String?
  city               String
  state              String
  country            String
  zipCode            String

  createdAt          DateTime @default(now())
}